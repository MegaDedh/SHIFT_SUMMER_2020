<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/nav_mainFragment">

    <!--mainFragment-->
    <fragment
        android:id="@+id/nav_mainFragment"
        android:name="ru.asshands.softwire.shift_summer_2020.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_weatherListFragment"
            app:destination="@id/nav_weatherListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <!--weatherListFragment-->
    <fragment
        android:id="@+id/nav_weatherListFragment"
        android:name="ru.asshands.softwire.shift_summer_2020.fragments.WeatherListFragment"
        android:label="fragment_weather_list"
        tools:layout="@layout/fragment_weather_list">
        <action
            android:id="@+id/action_weatherListFragment_to_cityFragment"
            app:destination="@id/nav_cityFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
        <argument
            android:name="requestedDepart"
            app:argType="ru.asshands.softwire.shift_summer_2020.models.CityWeather"/>
    </fragment>

    <!--cityFragment-->
    <fragment
        android:id="@+id/nav_cityFragment"
        android:name="ru.asshands.softwire.shift_summer_2020.fragments.CityFragment"
        android:label="fragment_city"
        tools:layout="@layout/fragment_city">
    </fragment>


</navigation>